  <script>
    let downloads = 50000;
    let rewards = 100000;
    const downloadCountEl = document.getElementById('downloadCount');
    const rewardCountEl = document.getElementById('rewardCount');
    const winnerNameEl = document.getElementById('winnerName');
    const winnerAmountEl = document.getElementById('winnerAmount');
    const winnerImgEl = document.getElementById('winnerImg');

    const winners = [
      { name: 'Amit', gender: 'male' },
      { name: 'Raj', gender: 'male' },
      { name: 'Sneha', gender: 'female' },
      { name: 'Kiran', gender: 'female' },
      { name: 'Deepak', gender: 'male' },
      { name: 'Anjali', gender: 'female' }
    ];

    setInterval(() => {
      downloads += Math.floor(Math.random() * 20) + 1;
      downloadCountEl.textContent = downloads.toLocaleString();
    }, 2000);

    setInterval(() => {
      rewards += Math.floor(Math.random() * 450) + 50;
      rewardCountEl.textContent = rewards.toLocaleString();
    }, 3000);

    setInterval(() => {
      const winner = winners[Math.floor(Math.random() * winners.length)];
      const amount = Math.floor(Math.random() * 14500 + 1000) * 2 - 1;
      winnerNameEl.textContent = winner.name;
      winnerAmountEl.textContent = amount.toLocaleString();
      const imgId = Math.floor(Math.random() * 90) + 1;
      const genderPath = winner.gender === 'male' ? 'men' : 'women';
      winnerImgEl.src = `https://randomuser.me/api/portraits/${genderPath}/${imgId}.jpg`;
    }, 4000);

    function calculateEarnings() {
      const friendsRegistered = parseInt(document.getElementById('friendsRegistered').value) || 0;
      const firstDeposits = parseInt(document.getElementById('firstDeposits').value) || 0;
      const friendsBet = parseFloat(document.getElementById('friendsBet').value) || 0;
      const betTax = parseFloat(document.getElementById('betTax').value) || 0;

      const total = (friendsRegistered * 5) + (firstDeposits * 20) + (friendsBet * 0.01) + (betTax * 0.9);
      document.getElementById('totalEarnings').textContent = total.toFixed(2);
    }
  </script>
